@{
    Layout = "_Formulario";
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <form method="post">
    <h1>Formulario de Adopción</h1>   
    <div class="form-group">
        <label for="">Nombres:</label>
        <input type="text" name="Nombres" id="" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Apellido Paterno:</label>
        <input type="text" name="ApellidoPa" id="" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Apellido Materno:</label>
        <input type="text" name="ApellidoMa" id="" class="form-control">
    </div>

    <div class="form-group">
        <label name="Tipo" class="control-label">Tipo de Mascota</label>
        <select name="Tipo">
            <option value="Perro">Perro</option>
            <option value="Gato">Gato</option>          
        </select>
    </div>

    <div class="form-group">
        <label for="">Descripcion:</label>
        <textarea name="descripcion" id="" cols="30" rows="10" class="form-control"></textarea>
    </div>

    
    

    <div class="form-group">
        <label for="">Teléfono:</label>
        <input type="text" name="Telefono" id="" class="form-control">
    </div>

    <div class="form-group">
        <label name="Distrito" class="control-label">Seleecione Distrito</label>
        <select name="Distrito">
            <option value="Distrito A">Distrito A</option>
            <option value="Distrito B">Distrito B</option>
            <option value="Distrito C">Distrito C</option>
            <option value="Distrito D">Distrito D</option>             
        </select>
    </div>

    <div class="form-group">
        <label for="">Dirección:</label>
        <input type="text" name="Direccio" id="" class="form-control">
    </div>

    <button class="btn btn-primary">Enviar Formulario</button>
</form>
</div>